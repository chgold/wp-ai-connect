{
    "name": "ai-connect/wordpress-webmcp",
    "description": "WebMCP Bridge for WordPress - Connect AI agents to your WordPress site using OAuth 2.0 and industry-standard protocols",
    "type": "wordpress-plugin",
    "keywords": [
        "wordpress",
        "ai",
        "webmcp",
        "oauth",
        "jwt",
        "api",
        "woocommerce",
        "automation",
        "agent",
        "llm",
        "claude",
        "chatgpt"
    ],
    "homepage": "https://github.com/chgold/ai-connect",
    "license": "GPL-3.0-or-later",
    "authors": [
        {
            "name": "chgold",
            "homepage": "https://github.com/chgold",
            "role": "Developer"
        }
    ],
    "support": {
        "issues": "https://github.com/chgold/ai-connect/issues",
        "source": "https://github.com/chgold/ai-connect"
    },
    "require": {
        "php": ">=7.4",
        "firebase/php-jwt": "^6.0",
        "predis/predis": "^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "AIConnect\\": "includes/",
            "AIConnect\\Core\\": "includes/core/",
            "AIConnect\\Modules\\": "includes/modules/",
            "AIConnect\\API\\": "includes/api/",
            "AIConnect\\Admin\\": "includes/admin/"
        }
    },
    "config": {
        "platform": {
            "php": "7.4"
        },
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
